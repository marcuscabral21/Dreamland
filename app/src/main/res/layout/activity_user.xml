<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0E6A5"
    tools:context=".User">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="126dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/userphoto"
        android:contentDescription="User photo" />

    <ImageView
        android:id="@+id/nameUser"
        android:layout_width="119dp"
        android:layout_height="92dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="192dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/name"
        android:contentDescription="Name image" />

    <ImageView
        android:id="@+id/timeUser"
        android:layout_width="122dp"
        android:layout_height="71dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="352dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/time"
        android:contentDescription="Time image" />

    <ImageView
        android:id="@+id/SpaceTime"
        android:layout_width="280dp"
        android:layout_height="82dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="420dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/space"
        android:contentDescription="Field for time" />

    <ImageView
        android:id="@+id/SpaceName"
        android:layout_width="281dp"
        android:layout_height="78dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="264dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/space"
        android:contentDescription="Field for name" />

    <EditText
        android:id="@+id/nicknameEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="User"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/SpaceName"
        app:layout_constraintEnd_toEndOf="@+id/SpaceName"
        app:layout_constraintTop_toTopOf="@+id/SpaceName"
        app:layout_constraintBottom_toBottomOf="@+id/SpaceName" />

    <ImageButton
        android:id="@+id/SaveBtn"
        android:layout_width="184dp"
        android:layout_height="64dp"
        android:layout_marginTop="480dp"
        android:background="#00FFFFFF"
        android:onClick="onSaveBtnClick"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:srcCompat="@drawable/savebtn"
        android:contentDescription="Save button" />

    <TextView
        android:id="@+id/nicknameTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/SpaceName"
        app:layout_constraintEnd_toEndOf="@+id/SpaceName"
        app:layout_constraintTop_toTopOf="@+id/SpaceName"
        app:layout_constraintBottom_toBottomOf="@+id/SpaceName" />

    <TextView
        android:id="@+id/sessionTimeTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/SpaceTime"
        app:layout_constraintEnd_toEndOf="@+id/SpaceTime"
        app:layout_constraintTop_toTopOf="@+id/SpaceTime"
        app:layout_constraintBottom_toBottomOf="@+id/SpaceTime" />

</androidx.constraintlayout.widget.ConstraintLayout>